Console.Write("  [5] "); Console.WriteLine("Orc", Color.Green);
Console.Write("  [6] "); Console.WriteLine("Kraken", Color.Green);
Console.Write("  [7] "); Console.WriteLine("Elf", Color.Green);

Console.Write(" >> ");
int? monster = null;
try {
monster = Convert.ToInt32(Console.ReadLine()) - 1;
if (monster >= 7 || monster <= 0) monster = null;
} catch (FormatException) {
monster = null;
}

